
<integrator type="aov" variable="normals">
    <scene>
        <camera type="thinlens" id="camera">
            <integer name="width" value="512"/>
            <integer name="height" value="512"/>

            <string name="fovAxis" value="x"/>
            <float name="fov" value="40"/>
			<float name="focusDistance" value="3.5" />
			<float name="aperture" value="22" />
			<float name="focalLength" value="0.5" />

            <transform>
                <lookat origin="2,0,-3" target="0,0,0" up="0,1,0"/>
            </transform>
        </camera>

        <instance>
            <shape type="mesh" filename="tests/meshes/bunny.ply"/>
            <transform>
                <rotate axis="1,0,0" angle="90"/>
                <translate y="0.5" />

                <translate x="-2.5" />
                <translate z="9.5" />
            </transform>
        </instance>

        <instance>
            <shape type="sphere"/>
            <transform>
                <scale value="0.5"/>
                <translate y="0.6"/>
            </transform>
        </instance>

        <instance>
            <shape type="sphere"/>
            <transform>
                <scale value="0.4"/>
                <translate y="0"/>
            </transform>
        </instance>

        <instance>
            <shape type="sphere"/>
            <transform>
                <scale value="0.3"/>
                <translate y="-0.5"/>
            </transform>
        </instance>

        <instance>
            <shape type="sphere"/>
            <transform>
                <scale value="0.02"/>
                <scale z="10"/>
                <translate z="-0.3" y="-0.4"/>
            </transform>
        </instance>

        <instance>
            <shape type="sphere"/>
            <transform>
                <scale value="0.03"/>
                <translate x="-0.1" z="-0.28" y="-0.5"/>
            </transform>
        </instance>

        <instance>
            <shape type="sphere"/>
            <transform>
                <scale value="0.03"/>
                <translate x="0.1" z="-0.28" y="-0.5"/>
            </transform>
        </instance>
    </scene>
    <image id="snowman_and_bunny" />
    <sampler type="independent" count="50"/>
</integrator>
